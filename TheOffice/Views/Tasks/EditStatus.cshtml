@model TheOffice.Models.Task

<h2 class="text-center mt-5">Editare status</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            @using (Html.BeginForm(actionName: "EditStatus", controllerName: "Tasks",
            method: FormMethod.Post,
            routeValues: new { id = Model.Id }))
            {
                <label>Selectati statusul</label>
                @Html.DropDownListFor(m => m.StatusId, new SelectList(Model.Stat, "Value", "Text"),
                "Selectati statusul", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.StatusId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-outline-warning m-2" type="submit">Modifica status</button>

            }
        </div>
    </div>
</div




