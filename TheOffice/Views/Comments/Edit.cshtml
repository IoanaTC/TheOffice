@model TheOffice.Models.Comment


@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center mt-5">Edit comment</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-4">
@using (Html.BeginForm(controllerName: "Comments", actionName: "Edit",
    method: FormMethod.Post, routeValues: new { id = Model.Id }))

{
    @Html.Label("Content", "Content")

    <br />

    @Html.Editor("Content", new { @class = "form-control" })
    <br />

    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })

    <br />
    <br />

                <button class="btn btn-outline-info m-2" type="submit">Edit</button>

}
        </div>
    </div>
</div>
